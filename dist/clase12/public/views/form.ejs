<form
  class="d-flex flex-column border bg-secondary align-items-center justify-content-center"
  onsubmit="return addProduct(this)"
>
  <div class="form-group col">
    <h2 class="ml-3 mt-2 text-white">Ingrese Producto</h2>
    <label for="inputNombre" class="col-sm-2 col-form-label text-white"
      >Nombre</label
    >
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputNombre" name="title" />
    </div>
  </div>
  <div class="form-group col">
    <label for="inputPrecio" class="col-sm-2 col-form-label text-white"
      >Precio</label
    >
    <div class="col-sm-10">
      <input type="number" class="form-control" id="inputPrecio" name="price" />
    </div>
  </div>
  <div class="form-group col mb-2">
    <label for="inputUrl" class="col-sm-2 col-form-label text-white"
      >Foto URL</label
    >
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputUrl" name="url" />
    </div>
  </div>
  <div class="form-group col mt-3">
    <div class="col-sm-10">
      <input type="submit" class="btn btn-success value="Enviar" />
    </div>
  </div>
</form>
