
<a href="./">Volver al Formulario</a>
{{#if prods}}
    <div class="card-deck">
        {{#each prods}}
            <div class="card">
                <img class="card-img-top w-50" src={{this.url}} alt="Card image cap">
                <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text"> Precio: $ {{this.price}}</p>
                </div>
            </div>
        {{/each}}
    </div>
    {{else}}
    <h2>No hay productos cargados</h2>
{{/if}}